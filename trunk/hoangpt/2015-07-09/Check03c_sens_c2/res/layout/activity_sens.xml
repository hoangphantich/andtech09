<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Weight"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:inputType="number"
       />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="kg"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp"
        android:text="Maximum"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtStarback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnCafe"
        android:layout_marginTop="47dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="Starbuck 	0		0" />

    <TextView
        android:id="@+id/txtMilkCafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtStarback"
        android:layout_below="@+id/txtStarback"
        android:layout_marginTop="15dp"
        android:text="Cafe sua 	0		0" />

    <TextView
        android:id="@+id/txtBlackCafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMilkCafe"
        android:layout_below="@+id/txtMilkCafe"
        android:layout_marginTop="18dp"
        android:text="Cafe den	0 		0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtBlackCafe"
        android:layout_below="@+id/txtBlackCafe"
        android:layout_marginTop="30dp"
        android:text="Cafe in day" />

    <TextView
        android:id="@+id/txtTotalInDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/textView9"
        android:text="0 mg" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spnCafe"
        android:layout_alignParentRight="true"
        android:text="+"  />

    <EditText
        android:id="@+id/edtMaximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/edtWeight"
        android:ems="10"
        android:enabled="false" />

    <Spinner
        android:id="@+id/spnCafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtMaximum"
        android:layout_alignRight="@+id/edtMaximum"
        android:layout_below="@+id/edtMaximum"
        android:layout_marginTop="23dp"
        android:entries="@array/cafelist" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtMaximum"
        android:layout_alignRight="@+id/textView2"
        android:text="mg"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"
        android:text="Cafe"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>